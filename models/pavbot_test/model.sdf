<?xml version="1.0"?>
<sdf version="1.9">
  <model name="pavbot_test">
    <static>false</static>

    <!-- =========================
         BASE / CHASSIS
         ========================= -->
    <link name="base_link">
      <!-- base_link origin roughly at wheel axle height -->
      <pose>0 0 0.17 0 0 0</pose>

      <inertial>
        <mass>80.0</mass>
        <inertia>
          <ixx>5.0</ixx> <ixy>0.0</ixy> <ixz>0.0</ixz>
          <iyy>8.0</iyy> <iyz>0.0</iyz>
          <izz>10.0</izz>
        </inertia>
      </inertial>

      <!-- Chassis box (0.25m tall). Center at 0.125 so bottom is at z=0 in link frame -->
      <collision name="chassis_collision">
        <pose>0 0 0.125 0 0 0</pose>
        <geometry>
          <box>
            <size>0.91 0.61 0.25</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="chassis_visual">
        <pose>1.2 0.7 -0.32 1.5708 0 -1.5708</pose>
        <geometry>
          
<mesh>
  <uri>model://pavbot_test/meshes/Chassis.glb</uri>

  <!-- SCALE MESH from Michael here 
    1 1 1 (if exported in meters)
    0.01 0.01 0.01 (if exported in centimeters)
    0.001 0.001 0.001 (if exported in millimeters) -->
  <scale>0.007 0.007 0.007</scale>
</mesh>

        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>

  

    </link>

    <!-- =========================
         CASTER WHEELS
         ========================= -->
   
    <link name="rear_left_caster">
      <!-- Passive caster for wheelchair-style 4-wheel base -->
      <pose>-0.75 0.46 0.07 0 0 0</pose>
      <inertial>
        <mass>0.8</mass>
        <inertia>
          <ixx>0.0006</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.0006</iyy> <iyz>0</iyz>
          <izz>0.0006</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.07</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.4</mu>
              <mu2>0.4</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <sphere>
            <radius>0.07</radius>
          </sphere>
        </geometry>
        <material>
          <ambient>0.12 0.12 0.12 1</ambient>
          <diffuse>0.12 0.12 0.12 1</diffuse>
        </material>
      </visual>
    </link>

    <link name="rear_right_caster">
      <!-- Passive caster for wheelchair-style 6-wheel base -->
      <pose>-0.75 -0.46 0.07 0 0 0</pose>
      <inertial>
        <mass>0.8</mass>
        <inertia>
          <ixx>0.0006</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.0006</iyy> <iyz>0</iyz>
          <izz>0.0006</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.07</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.4</mu>
              <mu2>0.4</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <sphere>
            <radius>0.07</radius>
          </sphere>
        </geometry>
        <material>
          <ambient>0.12 0.12 0.12 1</ambient>
          <diffuse>0.12 0.12 0.12 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- HERE IS WHERE CAMERA WENT -->
    
    <!-- =========================
         DRIVEN WHEELS (DIFF DRIVE)
         ========================= -->
    <link name="left_wheel">
      <pose>0.00 0.65 0.17 0 0 0</pose>

      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.02</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.02</iyy> <iyz>0</iyz>
          <izz>0.02</izz>
        </inertia>
      </inertial>

      <!-- Cylinder axis rotated onto +Y to match joint axis -->
      <collision name="collision">
        <pose>0 0 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.17</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="visual">
        <pose>0 0 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.17</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>0.00 -0.65 0.17 0 0 0</pose>

      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.02</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.02</iyy> <iyz>0</iyz>
          <izz>0.02</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <pose>0 0 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.17</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="visual">
        <pose>0 0 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.17</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- =========================
         REAR CASTER (stability)
         ========================= -->
<!-- =========================
         DIFF DRIVE SYSTEM PLUGIN
         ========================= -->

    <joint name="rear_left_caster_joint" type="ball">
      <parent>base_link</parent>
      <child>rear_left_caster</child>
      <!-- ball joints don't need an axis block -->
    </joint>

    <joint name="rear_right_caster_joint" type="ball">
      <parent>base_link</parent>
      <child>rear_right_caster</child>
      <!-- ball joints don't need an axis block -->
    </joint>


    <plugin filename="libgz-sim8-diff-drive-system.so"
            name="gz::sim::systems::DiffDrive">

      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <wheel_separation>1.3</wheel_separation>
      <wheel_radius>0.17</wheel_radius>

      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>

      <odom_frame>odom</odom_frame>
      <base_frame>base_link</base_frame>

      <max_linear_velocity>1.4</max_linear_velocity>
      <max_angular_velocity>2.2</max_angular_velocity>
    </plugin>

  </model>
</sdf>